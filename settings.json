{
  // Editor General
  "editor.fontFamily": "JetBrainsMono NF",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "trailing",
  "editor.inlineSuggest.showToolbar": "always",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.addMissingImports.ts": "explicit",
    "source.sortImports": "explicit"
  },
  "editor.minimap.autohide": true,
  "editor.minimap.maxColumn": 50,
  "editor.minimap.scale": 2,
  "editor.minimap.renderCharacters": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",
  "editor.guides.bracketPairs": "active",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.rulers": [100],
  "editor.tabSize": 2,
  "editor.stickyTabStops": true,
  "editor.formatOnSave": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment.line"],
        "settings": {
          "fontStyle": "underline"
        }
      },
      {
        "scope": ["keyword.control", "comment.block.documentation"],
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },
  // Terminal Configuration
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.ignoreProcessNames": ["bash"],
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.tabs.defaultColor": "terminal.ansiYellow",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.accessibleViewPreserveCursorPosition": true,
  // Git and GitHub
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.advanced": {},
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "typescript": true
  },
  "githubPullRequests.pushBranch": "always",
  "gitlens.advanced.messages": {
    "suppressLineUncommittedWarning": true
  },
  // Language-specific formatters
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.defaultFormatter": "mervin.markdown-formatter"
  },
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  // Language-specific settings
  "js/ts.implicitProjectConfig.target": "ESNext",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.semicolons": "insert",
  "typescript.format.enable": true,
  "typescript.preferences.quoteStyle": "double",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "scss.format.enable": false,
  // File Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Workbench
  "workbench.startupEditor": "none",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.activityBar.location": "top",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.iconTheme": "eq-material-theme-icons-light",
  "workbench.panel.showLabels": false,
  "workbench.editor.scrollToSwitchTabs": true,
  // Extensions and misc
  "liveServer.settings.donotShowInfoMsg": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "settingsSync.ignoredExtensions": [],
  "settingsSync.ignoredSettings": [],
  "symbols.hidesExplorerArrows": true,
  "path-intellisense.mappings": {},
  "path-intellisense.autoSlashAfterDirectory": false,
  "excalidraw.language": "en",
  "excalidraw.theme": "dark",
  "redhat.telemetry.enabled": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.renderSideBySide": true,
  "material-icon-theme.hidesExplorerArrows": true,
  "files.autoSave": "onFocusChange",
  "window.customTitleBarVisibility": "auto",
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": true,
  "prettier.configPath": ".prettierrc.json",
  // Vim
  "vim.autoSwitchInputMethod.enable": true,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.cursorStylePerMode.visual": "underline",
  // Vue
  "eslint.validate": ["ts", "vue", "html"],
  "html.format.enable": true,
  "html.autoClosingTags": true,
  "html.format.wrapAttributes": "force-aligned",
  "vue.complete.casing.props": "autoCamel",
  "vue.format.style.initialIndent": true,
  "vue.format.script.initialIndent": true,
  "vue.server.includeLanguages": ["vue", "typescript"]
}
